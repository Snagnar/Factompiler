# Include the grammar file for the parser
include dsl_compiler/grammar/*.lark

# Include documentation
include README.md
include LICENSE
include LANGUAGE_SPEC.md

# Include the documentation directory
recursive-include doc *.md

# Include example programs
recursive-include example_programs *.facto

# Include standard library
recursive-include dsl_compiler/lib *.facto

# Exclude development and test files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .git*
global-exclude .coverage
global-exclude *.egg-info
prune temp
prune output
prune htmlcov
prune tests
prune dsl_compiler/integration_tests
