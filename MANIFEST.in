# Include the entire dsl_compiler directory
recursive-include dsl_compiler *

# Include documentation
include README.md
include LICENSE
include LANGUAGE_SPEC.md

# Include the documentation directory
recursive-include doc *

# Include example programs
recursive-include example_programs *.facto

# Include standard library
recursive-include lib *.facto

# Exclude development and test files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .git*
global-exclude .coverage
global-exclude *.egg-info
prune temp
prune output
prune htmlcov
prune tests
prune dsl_compiler/integration_tests
